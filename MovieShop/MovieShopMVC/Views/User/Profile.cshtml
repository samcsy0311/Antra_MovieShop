@model ApplicationCore.Models.UserDetailsModel;

<div class="card" style="width: 23rem; margin:auto">
     <img src="data:image/png;base64," 
          class="card-img-top" alt="Unknown User Picture" style="width:80%; margin: auto">
     <div class="card-body">
          <h4 class="card-title">@(Model.FirstName + " " + Model.LastName)</h4>
          <hr />
          <table class="table table-borderless">
               <tbody>
                    <tr>
                         <td class="card-text">User ID:</td>   <td class="card-text">@Model.Id</td>
                    </tr>
                    <tr>
                         <td class="card-text">Date Of Birth:</td>   <td class="card-text">@Model.DateOfBirth.Value.ToString("MMM d, yyyy")</td>
                    </tr>
                    <tr>
                         <td class="card-text">Email:</td>   <td class="card-text">@Model.Email</td>
                    </tr>
                    <tr>
                         <td class="card-text">Phone No.:</td>   <td class="card-text">@Model.PhoneNumber</td>
                    </tr>
               </tbody>
          </table>
          <a asp-controller="User" asp-action="EditProfile" class="btn btn-primary">Edit</a>
     </div>
</div>